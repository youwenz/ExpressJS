extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet" href="/css/orders.css")

block content
    main
        if orders.length <= 0
            h1 Nothing here!
        else
            ul.orders
                each order in orders
                    li.orders__item 
                        h1 Order - # #{order.id}
                        ul.orders__products
                            each item in order.products
                                li.orders__products-item  #{item.title} (#{item.orderItem.quantity})